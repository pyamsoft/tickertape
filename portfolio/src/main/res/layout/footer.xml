<merge>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/position_footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">

        <TextView
            android:id="@+id/position_footer_total_shares_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Total Shares"
            android:textAppearance="?attr/textAppearanceBody1"
            android:textStyle="bold"
            app:layout_constrainedHeight="true"
            app:layout_constraintEnd_toEndOf="@id/position_footer_avg_label"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/position_footer_total_shares_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:textAppearance="?attr/textAppearanceBody1"
            app:layout_constrainedHeight="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/position_footer_total_shares_label"
            app:layout_constraintTop_toTopOf="@id/position_footer_total_shares_label" />

        <TextView
            android:id="@+id/position_footer_avg_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Average Cost"
            android:textAppearance="?attr/textAppearanceBody1"
            android:textStyle="bold"
            app:layout_constrainedHeight="true"
            app:layout_constraintStart_toStartOf="@id/position_footer_total_shares_label"
            app:layout_constraintTop_toBottomOf="@id/position_footer_total_shares_label" />

        <TextView
            android:id="@+id/position_footer_avg_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceBody1"
            app:layout_constrainedHeight="true"
            app:layout_constraintEnd_toEndOf="@id/position_footer_total_shares_text"
            app:layout_constraintStart_toStartOf="@id/position_footer_total_shares_text"
            app:layout_constraintTop_toTopOf="@id/position_footer_avg_label" />

        <TextView
            android:id="@+id/position_footer_position_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Total Position"
            android:textAppearance="?attr/textAppearanceBody1"
            android:textStyle="bold"
            app:layout_constrainedHeight="true"
            app:layout_constraintEnd_toEndOf="@id/position_footer_avg_label"
            app:layout_constraintStart_toStartOf="@id/position_footer_avg_label"
            app:layout_constraintTop_toBottomOf="@id/position_footer_avg_label" />

        <TextView
            android:id="@+id/position_footer_position_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceBody1"
            app:layout_constrainedHeight="true"
            app:layout_constraintEnd_toEndOf="@id/position_footer_avg_text"
            app:layout_constraintStart_toStartOf="@id/position_footer_avg_text"
            app:layout_constraintTop_toTopOf="@id/position_footer_position_label" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</merge>