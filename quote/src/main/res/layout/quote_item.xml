<merge>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/quote_item"
        android:layout_width="match_parent"
        android:layout_height="96dp">

        <TextView
            android:id="@+id/quote_item_after_percent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceCaption"
            app:layout_constrainedHeight="true"
            app:layout_constrainedWidth="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/quote_item_after_change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:textAppearance="?attr/textAppearanceCaption"
            app:layout_constrainedHeight="true"
            app:layout_constrainedWidth="true"
            app:layout_constraintBottom_toBottomOf="@id/quote_item_after_percent"
            app:layout_constraintEnd_toStartOf="@id/quote_item_after_percent" />

        <TextView
            android:id="@+id/quote_item_after_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceBody1"
            app:layout_constrainedHeight="true"
            app:layout_constrainedWidth="true"
            app:layout_constraintBottom_toTopOf="@id/quote_item_after_change"
            app:layout_constraintEnd_toEndOf="@id/quote_item_after_percent" />

        <TextView
            android:id="@+id/quote_item_after_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="After Hours"
            android:textAppearance="?attr/textAppearanceCaption"
            app:layout_constrainedHeight="true"
            app:layout_constrainedWidth="true"
            app:layout_constraintBottom_toTopOf="@id/quote_item_after_price"
            app:layout_constraintEnd_toEndOf="@id/quote_item_after_price" />

        <TextView
            android:id="@+id/quote_item_normal_percent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:textAppearance="?attr/textAppearanceCaption"
            app:layout_constrainedHeight="true"
            app:layout_constrainedWidth="true"
            app:layout_constraintBottom_toTopOf="@id/quote_item_after_label"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_goneMarginBottom="0dp" />

        <TextView
            android:id="@+id/quote_item_normal_change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:textAppearance="?attr/textAppearanceCaption"
            app:layout_constrainedHeight="true"
            app:layout_constrainedWidth="true"
            app:layout_constraintBottom_toBottomOf="@id/quote_item_normal_percent"
            app:layout_constraintEnd_toStartOf="@id/quote_item_normal_percent" />

        <TextView
            android:id="@+id/quote_item_normal_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceBody1"
            app:layout_constrainedHeight="true"
            app:layout_constrainedWidth="true"
            app:layout_constraintBottom_toTopOf="@id/quote_item_normal_change"
            app:layout_constraintEnd_toEndOf="@id/quote_item_normal_percent" />

        <TextView
            android:id="@+id/quote_item_symbol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceHeadline6"
            app:layout_constrainedHeight="true"
            app:layout_constrainedWidth="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/quote_item_company"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceBody2"
            app:layout_constrainedHeight="true"
            app:layout_constrainedWidth="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/quote_item_symbol" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</merge>