<merge>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/watchlist_item_summary_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp">

        <TextView
            android:id="@+id/watchlist_item_summary_open_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:text="Open"
            android:textAppearance="?attr/textAppearanceCaption"
            app:layout_constrainedHeight="true"
            app:layout_constrainedWidth="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/watchlist_item_summary_open_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="4dp"
            android:textAppearance="?attr/textAppearanceCaption"
            android:textStyle="bold"
            app:layout_constrainedHeight="true"
            app:layout_constrainedWidth="true"
            app:layout_constraintStart_toEndOf="@id/watchlist_item_summary_open_label"
            app:layout_constraintTop_toTopOf="@id/watchlist_item_summary_open_label" />

        <TextView
            android:id="@+id/watchlist_item_summary_close_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="8dp"
            android:text="Previous Close"
            android:textAppearance="?attr/textAppearanceCaption"
            app:layout_constrainedHeight="true"
            app:layout_constrainedWidth="true"
            app:layout_constraintStart_toEndOf="@id/watchlist_item_summary_open_text"
            app:layout_constraintTop_toTopOf="@id/watchlist_item_summary_open_text" />

        <TextView
            android:id="@+id/watchlist_item_summary_close_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="4dp"
            android:textAppearance="?attr/textAppearanceCaption"
            android:textStyle="bold"
            app:layout_constrainedHeight="true"
            app:layout_constrainedWidth="true"
            app:layout_constraintStart_toEndOf="@id/watchlist_item_summary_close_label"
            app:layout_constraintTop_toTopOf="@id/watchlist_item_summary_close_label" />

        <TextView
            android:id="@+id/watchlist_item_summary_low_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginTop="8dp"
            android:text="Low"
            android:textAppearance="?attr/textAppearanceCaption"
            app:layout_constrainedHeight="true"
            app:layout_constrainedWidth="true"
            app:layout_constraintStart_toStartOf="@id/watchlist_item_summary_open_label"
            app:layout_constraintTop_toBottomOf="@id/watchlist_item_summary_open_label" />

        <TextView
            android:id="@+id/watchlist_item_summary_low_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="4dp"
            android:textAppearance="?attr/textAppearanceCaption"
            android:textStyle="bold"
            app:layout_constrainedHeight="true"
            app:layout_constrainedWidth="true"
            app:layout_constraintStart_toEndOf="@id/watchlist_item_summary_low_label"
            app:layout_constraintTop_toTopOf="@id/watchlist_item_summary_low_label" />

        <TextView
            android:id="@+id/watchlist_item_summary_high_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="8dp"
            android:text="High"
            android:textAppearance="?attr/textAppearanceCaption"
            app:layout_constrainedHeight="true"
            app:layout_constrainedWidth="true"
            app:layout_constraintStart_toEndOf="@id/watchlist_item_summary_low_text"
            app:layout_constraintTop_toTopOf="@id/watchlist_item_summary_low_text" />

        <TextView
            android:id="@+id/watchlist_item_summary_high_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="4dp"
            android:textAppearance="?attr/textAppearanceCaption"
            android:textStyle="bold"
            app:layout_constrainedHeight="true"
            app:layout_constrainedWidth="true"
            app:layout_constraintStart_toEndOf="@id/watchlist_item_summary_high_label"
            app:layout_constraintTop_toTopOf="@id/watchlist_item_summary_high_label" />


        <TextView
            android:id="@+id/watchlist_item_summary_volume_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="8dp"
            android:text="Volume"
            android:textAppearance="?attr/textAppearanceCaption"
            app:layout_constrainedHeight="true"
            app:layout_constrainedWidth="true"
            app:layout_constraintStart_toEndOf="@id/watchlist_item_summary_high_text"
            app:layout_constraintTop_toTopOf="@id/watchlist_item_summary_high_text" />

        <TextView
            android:id="@+id/watchlist_item_summary_volume_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="4dp"
            android:textAppearance="?attr/textAppearanceCaption"
            android:textStyle="bold"
            app:layout_constrainedHeight="true"
            app:layout_constrainedWidth="true"
            app:layout_constraintStart_toEndOf="@id/watchlist_item_summary_volume_label"
            app:layout_constraintTop_toTopOf="@id/watchlist_item_summary_volume_label" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</merge>