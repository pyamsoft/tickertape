<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/remote_views_data"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:layout_height="48dp"
    tools:layout_width="@dimen/remote_view_data_width">

    <TextView
        android:id="@+id/remote_views_data_symbol"
        style="@style/TextAppearance.Compat.Notification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:maxLines="1"
        android:textSize="@dimen/remote_view_data_text_size"
        android:textStyle="bold"
        tools:text="GOOGL" />

    <TextView
        android:id="@+id/remote_views_data_price"
        style="@style/TextAppearance.Compat.Notification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:maxLines="1"
        android:textSize="@dimen/remote_view_data_text_size"
        tools:text="$2,101.56"
        tools:textColor="#F00" />

</LinearLayout>